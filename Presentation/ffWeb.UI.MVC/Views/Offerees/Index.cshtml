@model IEnumerable<fPeerLending.Entities.OfferReceipient>
@using ffWeb.UI.MVC.Helpers

@{
    ViewBag.Title = "Offer Receipient";
}

<h2 class="page-title">Offer Receipient</h2>


<table>
    <tr> 
        <th>
            @Html.DisplayNameFor(model => model.MemberEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberTelno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MailingGroup)
        </th>
        <th>
             @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Add", "Create", "Offerees", routeValues: new { OfferId = ViewBag.OfferId }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })
        </th>
    </tr>

@foreach (var item in Model) {
    <tr> 
        <td>
            @Html.DisplayFor(modelItem => item.MemberEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemberTelno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MailingGroup)
        </td>
        <td>
           <div class="pull-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "Offerees", routeValues: new { id = item.OfferReceipientId }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                        &nbsp;
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "Offerees", routeValues: new { id = item.OfferReceipientId }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
               </div>
        </td>
    </tr>
}

</table>
